<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <h1>Welcome To Yepo!</h1>
        <p>View our handpicked campgrounds from all over the world</p>
        <p>
            <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a>
        </p>
    </header>

    <div class="row" style="display: flex; flex-wrap: wrap">
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-md-3 col-sm-6">
                <div class="card text-center no-gutters">
                    <img src="<%= campground.image %>" class="card-img-top col-12" alt="Card image cap">
                    <div class="card-block">
                        <h5 class="card-title"><%= campground.name %></h5>
                        <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>


<% include ../partials/footer %>
